<div class="message-board bg-white container justify-center mt-24 lg:mx-auto lg:flex lg:shadow-lg lg:rounded-lg">
    <div class="board-container w-full flex flex-wrap justify-center">
        <div class="header text-3xl"> 
            <h2> Message Board </h2>
        </div>
          
        <div class="content w-full flex flex-wrap justify-between">
            <div class="message-container py-12 px-6 max-w-xl lg:max-w-5xl lg:w-1/2 mt-4 w-full">
                <label class="subject block w-full">
                        <input type="subject" class="form-input mt-1 block w-full text-lg text-gray-700" placeholder="Subject: ">
                </label>
                <label class="message block w-full">
                        <textarea class="form-textarea text-base mt-1 block w-full text-gray-600" rows="9" placeholder="Enter your message here.. "></textarea>
                </label>
            </div> 
            <div class="send-container py-12 px-6 max-w-xl lg:max-w-5xl lg:w-1/2 mt-4 w-full">
                <div class="send-content block w-full">
                    <span class="title text-gray-900 text-xl">Send Message to: </span>
                    <div class="options mt-2">
                        <div>
                            <label class="check-options inline-flex items-center mt-4">
                                <input type="checkbox" class="form-checkbox text-indigo-600" checked>
                                <span class="ml-2 text-lg text-gray-700">All users</span>
                            </label>
                        </div>
                        <div>
                            <label class="inline-flex items-center mt-4">
                                <input type="checkbox" class="form-checkbox text-indigo-600">
                                <span class="ml-2 text-lg text-gray-700">Healthcare Providers</span>
                            </label>
                        </div>
                        <div>
                            <label class="inline-flex items-center mt-4">
                                <input type="checkbox" class="form-checkbox text-indigo-600">
                                <span class="ml-2 text-lg text-gray-700">Local Health Departments</span>
                            </label>
                        </div>
                        <div>
                            <label class="inline-flex items-center mt-4">
                                <input type="checkbox" class="form-checkbox text-indigo-600">
                                <span class="ml-2 text-lg text-gray-700">School Health</span>
                            </label>
                        </div>
                        <div>
                            <label class="inline-flex items-center mt-4">
                                <input type="checkbox" class="form-checkbox text-indigo-600">
                                <span class="ml-2 text-lg text-gray-700">Agency Administrator</span>
                            </label>
                        </div>
                        <p class="text-sm mt-4 font-semibold"> * All messages must be approved by Regional Administrator </p>
                        <div class="mt-8">
                            <a href="#" class="bg-indigo-600 text-gray-100 px-5 py-3 font-semibold rounded">Send Message</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>    
</div> 