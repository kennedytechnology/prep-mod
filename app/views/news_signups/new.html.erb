<div class="min-h-screen bg-white flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="text-center text-3xl leading-9 font-extrabold text-gray-900">
                Sign Up
            </h2>
            <div class="mt-2 text-center text-sm leading-5 text-gray-600 max-w">
                <p
                    class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition ease-in-out duration-150">
                    Sign Up for News and Notifications to get the latest news on C-19.
                </p>
            </div>
        </div>
            <%= form_with model: NewsSignup.new, local: true do |f| %>
                <div>
                    <%= f.label :name, class: "block text-sm font-medium leading-5 text-gray-700" %>
                    <div class="mt-1 rounded-md shadow-sm">
                        <%= f.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5", required: true %>
                    </div>
                </div>

                <div class="mt-6">
                    <%= f.label :zip_code, class: "block text-sm font-medium leading-5 text-gray-700" %>
                    <div class="mt-1 rounded-md shadow-sm">
                        <%= f.text_field :zip_code, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5", required: true %>
                    </div>
                </div>

                <div class="mt-6">
                    <%= f.label :date_of_birth, class: "block text-sm font-medium leading-5 text-gray-700" %>
                    <div class="mt-1 rounded-md shadow-sm">
                        <%= f.date_field :date_of_birth, min: Date.today - 50.years, max: Date.today, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5 mb-4 ", placeholder: "MM/DD/YYYY", required: true %>
                    </div>
                </div>

                <div class="mt-6">
                    <%= f.label :topics, class: "block text-sm font-medium leading-5 text-gray-700 mb-3" %>
                    <div class="">
                    <div class="max-w-xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <% ["Testing", "Screening", "Safety Kit", "Medication", "Other"].each do |topic|%>
                            <div class="relative flex items-start">
                                <div class="absolute flex items-center h-5">
                                    <%= f.check_box(:topics, {multiple: true, id: "topic_#{topic}", class: "form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out"}, topic) %>
                                </div>
                                <div class="pl-7 text-sm leading-5">
                                    <label for="topic_<%=topic%>" class="font-meidum text-gray-700"> <%= topic %> </label>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    </div>

                    
                </div>

                <div class="mt-6">
                    <%= f.label :occupation, "Choose Occupation", class: "block text-sm font-medium leading-5 text-gray-700" %>
                    <div class="mt-1 rounded-md shadow-sm">
                        <%= f.select :occupation, PATIENT_OCCUPATIONS, {prompt: "Select"}, {class: "block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5 mb-4", required: true} %>
                    </div>
                </div>

                <div class="mt-6">
                    <%= f.label :email, "Email Address", class: "block text-sm font-medium leading-5 text-gray-700" %>
                    <div class="mt-1 rounded-md shadow-sm">
                        <%= f.email_field :email, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5", required: true %>
                    </div>
                </div>

                <div class="mt-6">
                    <span class="block w-full rounded-md shadow-sm">
                        <%= f.submit "Sign Up", class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
                    </span>
                </div>
            <% end %>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm leading-5">
                        <span class="px-2 bg-white text-gray-500">
                            Or
                        </span>
                    </div>
                </div>

                <div class="mt-6">
                    <div>
                        <span class="w-full inline-flex rounded-md shadow-sm">
                            <%= link_to "Go Back", root_path, class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out" %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>