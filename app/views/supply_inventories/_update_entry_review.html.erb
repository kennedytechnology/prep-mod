<div class="opacity-0 pointer-events-none z-50 fixed bottom-0 inset-x-0 px-4 pb-4 sm:inset-0 sm:flex sm:items-center sm:justify-center" id="InventoryUpdateEntryModal">
    <!--
    Background overlay, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
    <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

    <!--
    Modal panel, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      To: "opacity-100 translate-y-0 sm:scale-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100 translate-y-0 sm:scale-100"
      To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  -->
    <div
        class="relative bg-white rounded-lg px-4 pt-5 pb-4 overflow-hidden shadow-xl transform transition-all sm:p-6">
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
            <button data-action="click->inventory-new-entry#toggleUpdateModal" type="button"
                class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150">
                <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div>
            <div class="w-11/12 mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <h1 class="main-title pb-4 border-b"> <%= @supply_inventory.product_name %> </h1>
                <div class="mt-4">
                    <div class="sm:grid sm:grid-cols-2 lg:grid-cols-4 sm:gap-4 lg:gap-6">
                        <div>
                            <%= f.label :event_date do %>
                                <span class="text-gray-500"> Event Date </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.date_field :event_date, class: "form-input block w-full", placeholder: "MM/DD/YYYY", required: true, disabled: true, id: "modal_supply_inventory_event_event_date" %>
                        </div>

                        <div>
                            <%= f.label :event_type do %>
                                <span class="text-gray-500"> Event Type </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.select :event_type, ["s1", "s2"], {prompt: "Select"}, {class: "block form-select w-full", required: true, disabled: true, id: "modal_supply_inventory_event_event_type"} %>
                        </div>

                        <div>
                            <%= f.label :quantity_user do %>
                                <span class="text-gray-500"> Quantity Used </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.number_field :quantity_used, class: "form-input block w-full", required: true, disabled: true, id: "modal_supply_inventory_event_quantity_used" %>
                        </div>

                        <div>
                            <%= f.label :quantity_lost do %>
                                <span class="text-gray-500"> Quantity Lost </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.number_field :quantity_lost, class: "form-input block w-full", required: true, disabled: true, id: "modal_supply_inventory_event_quantity_lost" %>
                        </div>

                        <div>
                            <%= f.label :quantity_loaned do %>
                                <span class="text-gray-500"> Quantity Loaned </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.number_field :quantity_loaned, class: "form-input block w-full", required: true, disabled: true, id: "modal_supply_inventory_event_quantity_loaned" %>
                        </div>

                        <div>
                            <%= f.label :quantity_destroyed do %>
                                <span class="text-gray-500"> Quantity Destroyed/Returned </span>
                                <span class="text-brand-red-500">*</span>
                            <% end %>
                            <%= f.number_field :quantity_destroyed, class: "form-input block w-full", required: true, disabled: true, id: "modal_supply_inventory_event_quantity_destroyed" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
            <span class="flex w-full sm:ml-3 sm:w-auto">
                <%= f.submit "Submit", class: "button-primary" %>
            </span>
            <span class="mt-3 flex w-full sm:mt-0 sm:w-auto">
                <button type="button" data-action="click->inventory-new-entry#toggleUpdateModal" class="button-primary">
                    Close
                </button>
            </span>
        </div>
    </div>
</div>