<h2 class="main-title"> Edit: <%= @supply_inventory.product_name %> </h2>

<%= form_with model: @supply_inventory, local: true, class: "py-5", data: {controller: "inventory-new-entry"} do |f| %>
    <div class="sm:grid sm:grid-cols-2 lg:grid-cols-4 sm:gap-4 lg:gap-6">
        <div>
            <%= f.label :received_at do %>
                <span class="text-gray-500"> Received Date </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.date_field :received_at, class: "form-input block w-full", placeholder: "MM/DD/YYYY", required: true %>
        </div>

        <div>
            <%= f.label :item_type do %>
                <span class="text-gray-500"> Item Type </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :item_type, INVENTORY_ITEM_TYPES, {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :product_name do %>
                <span class="text-gray-500"> Product Name </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.text_field :product_name, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :manufacturer do %>
                <span class="text-gray-500"> Manufacturer </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :manufacturer, INVENTORY_MANUFACTURERS, {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :lot_number do %>
                <span class="text-gray-500"> Lot Number </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.text_field :lot_number, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :expiration_date do %>
                <span class="text-gray-500"> Expiration Date </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.date_field :expiration_date, class: "form-input block w-full", placeholder: "MM/DD/YYYY", required: true %>
        </div>

        <div>
            <%= f.label :quantity do %>
                <span class="text-gray-500"> Number of Items </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :packaging do %>
                <span class="text-gray-500"> Inventory Packaging </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :packaging, INVENTORY_PACKAGINGS, {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :source do %>
                <span class="text-gray-500"> Source of Items </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :source, INVENTORY_SOURCES, {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :event_date do %>
                <span class="text-gray-500"> Event Date </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.date_field :event_date, class: "form-input block w-full", placeholder: "MM/DD/YYYY", required: true %>
        </div>

        <div>
            <%= f.label :event_type do %>
                <span class="text-gray-500"> Event Type </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :event_type, ["s1", "s2"], {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :quantity_user do %>
                <span class="text-gray-500"> Quantity Used </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_used, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :quantity_lost do %>
                <span class="text-gray-500"> Quantity Lost </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_lost, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :quantity_loaned do %>
                <span class="text-gray-500"> Quantity Loaned </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_loaned, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :quantity_lost do %>
                <span class="text-gray-500"> Quantity Destroyed/Returned </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_lost, class: "form-input block w-full", required: true %>
        </div>

        <div>
            <%= f.label :county do %>
                <span class="text-gray-500"> County </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :county, COUNTIES.unshift("All"), {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>

        <div>
            <%= f.label :venue_name do %>
                <span class="text-gray-500"> Venue </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :venue_name, Clinic.pluck(:venue_name).unshift("All"), {prompt: "Select"}, {class: "block form-select w-full", required: true} %>
        </div>
    </div>

    <div class="flex justify-end items-end mt-2 mb-8">
        <%= f.submit "Update Product", class: "button-primary "%>
    </div>
<% end %>