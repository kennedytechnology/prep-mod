<h2 class="main-title"> New Entry </h2>

<%= form_with model: @supply_inventory, local: true, class: "py-5", data: {controller: "inventory-new-entry"} do |f| %>
    <%= f.hidden_field :clinic_id, value: params[:clinic_id] %>

    <div class="sm:grid sm:grid-cols-2 lg:grid-cols-4 sm:gap-4 lg:gap-6">
        <div>
            <%= f.label :event_date do %>
                <span class="text-gray-500"> Event Date </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.date_field :event_date, class: "form-input block w-full", placeholder: "MM/DD/YYYY", required: true, data: {action: "keyup->inventory-new-entry#updateModalField"} %>
        </div>

        <div>
            <%= f.label :event_type do %>
                <span class="text-gray-500"> Event Type </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.select :event_type, ["s1", "s2"], {prompt: "Select"}, {class: "block form-select w-full", required: true, data: {action: "change->inventory-new-entry#updateModalField"}} %>
        </div>

        <div>
            <%= f.label :quantity_user do %>
                <span class="text-gray-500"> Quantity Used </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_used, class: "form-input block w-full", required: true, data: {action: "keyup->inventory-new-entry#updateModalField"} %>
        </div>

        <div>
            <%= f.label :quantity_lost do %>
                <span class="text-gray-500"> Quantity Lost </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_lost, class: "form-input block w-full", required: true, data: {action: "keyup->inventory-new-entry#updateModalField"} %>
        </div>

        <div>
            <%= f.label :quantity_loaned do %>
                <span class="text-gray-500"> Quantity Loaned </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_loaned, class: "form-input block w-full", required: true, data: {action: "keyup->inventory-new-entry#updateModalField"} %>
        </div>

        <div>
            <%= f.label :quantity_destoyed do %>
                <span class="text-gray-500"> Quantity Destroyed/Returned </span>
                <span class="text-brand-red-500">*</span>
            <% end %>
            <%= f.number_field :quantity_destroyed, class: "form-input block w-full", required: true, data: {action: "keyup->inventory-new-entry#updateModalField"} %>
        </div>
    </div>

    <div class="flex justify-end items-end mt-2 mb-8">
        <p class="button-primary" data-action="click->inventory-new-entry#toggleUpdateModal"> Review & Confirm </p>
    </div>

    <%= render partial: "supply_inventories/update_entry_review", locals: {f: f} %>
<% end %>

<table class="table">
    <thead>
        <tr>
            <th> Date Received </th>
            <th> Item Type </th>
            <th> Item Name </th>
            <th> Manufacturer </th>
            <th> Source </th>
            <th> Lot Number </th>
            <th> Expiration Date </th>
            <th> Starting Qty </th>
            <th> Packaging </th>
            <th> Qty<br>Used </th>
            <th> Qty<br>Lost </th>
            <th> Qty<br>Loaned </th>
            <th> Current<br>Qty </th>
        </tr>
    </thead>
    <tbody class="bg-white">
        <tr class="hover:bg-gray-50">
            <td> <%= @supply_inventory.received_at.strftime("%m-%d-%Y") %> </td>
            <td> <%= @supply_inventory.item_type %> </td>
            <td> <%= @supply_inventory.item_name %> </td>
            <td> <%= @supply_inventory.manufacturer %> </td>
            <td> <%= @supply_inventory.source %> </td>
            <td> <%= @supply_inventory.lot_number %> </td>
            <td> <%= @supply_inventory.expiration_date.strftime("%m-%d-%Y") %> </td>
            <td> <%= @supply_inventory.packaging %> </td>
            <td> <%= @supply_inventory.quantity %> </td>
            <td> <%= @supply_inventory.quantity_used %> </td>
            <td> <%= @supply_inventory.quantity_lost %> </td>
            <td> <%= @supply_inventory.quantity_loaned %> </td>
            <td>
                <%# TODO: Find a solution! %>
                10
                <%# @supply_inventory.quantity - (@supply_inventory.quantity_used + @supply_inventory.quantity_lost + @supply_inventory.quantity_loaned) %>
            </td>
        </tr>
    </tbody>
</table>