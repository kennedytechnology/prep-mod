<div class="clinics-index-page">
    <div class="page-header">
        <h3>Clinics Listing</h3>
    </div>

    <div class="flex flex-col my-12">
        <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
            <div
                class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                <table class="min-w-full">
                    <thead>
                        <tr>
                            <th class="px-6 py-4 border-b border-red-200 bg-red-600 text-left text-xs leading-4 font-medium text-white uppercase tracking-wider">
                                Date
                            </th>
                            <th class="px-6 py-4 border-b border-red-200 bg-red-600 text-left text-xs leading-4 font-medium text-white uppercase tracking-wider">
                                County
                            </th>
                            <th class="px-6 py-4 border-b border-red-200 bg-red-600 text-left text-xs leading-4 font-medium text-white uppercase tracking-wider">
                                Venue Name
                            </th>
                            <th class="px-6 py-4 border-b border-red-200 bg-red-600 text-left text-xs leading-4 font-medium text-white uppercase tracking-wider">
                                Links
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white">
                        <%= render @clinics %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="pagination-section">
        <div class="pagination-container">
            <div class="pagination-info">
                <p><%= page_entries_info @clinics %></p>
            </div>
            <div class="pagination-buttons">
                <span class="lg-buttons"><%= will_paginate @clinics %></span>
                <span class="sm-buttons"><%= will_paginate @clinics, page_links: false %></span>
            </div>
        </div>
    </div>
</div>
