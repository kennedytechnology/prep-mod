<div class="opacity-0 pointer-events-none fixed bottom-0 inset-x-0 px-4 pb-4 sm:inset-0 sm:flex sm:items-center sm:justify-center" id="InventoryNewEntryModal">
    <!--
    Background overlay, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
    <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

    <!--
    Modal panel, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      To: "opacity-100 translate-y-0 sm:scale-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100 translate-y-0 sm:scale-100"
      To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  -->
    <div class="w-10/12 relative bg-white rounded-lg px-4 pt-5 pb-4 overflow-hidden shadow-xl transform transition-all sm:p-6 overflow-y-scroll" style="max-height: 80vh;">
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
            <button data-action="click->inventory-new-entry#toggleModal" type="button"
                class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150">
                <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div>
            <div class="field-fullwidth">
                <p class="title">Is clinic public or private? <span class="field-required">*</span> </p>
                <div class="w-3/12 radio-buttons-container">
                    <div>
                        <input type="radio" id="modal_clinic_status_public" disabled="true" class="form-radio radio-clinic-status" />
                        <label> Public </label>
                    </div>
                    <div>
                        <input type="radio" id="modal_clinic_status_private" disabled="true" class="form-radio radio-clinic-status" />
                        <label> Private </label>
                    </div>
                </div>
            </div>

            <div class="field-side-by-side">
                <div>
                    <p class="title">Services Provided <span class="field-required">*</span></p>
                    <div class="w-full checkboxes-container">
                        <%= collection_check_boxes(:clinic, :service_ids, ClinicService.all, :id, :name) do |b| %>
                        <div>
                            <span> <%= b.check_box(class: "form-checkbox", disabled: true, id: "modal_clinic_service_ids_#{b.object.id}") %> </span>
                            <span class="label"> <%= b.label(for: "") %> </span>
                        </div>
                        <% end %>
                    </div>
                </div>

                <div>
                    <p class="title">Open to <span class="field-required">*</span></p>
                    <div class="w-full checkboxes-container">
                        <%= collection_check_boxes(:clinic, :age_group_ids, ClinicAgeGroup.all, :id, :name) do |b| %>
                        <div>
                            <span> <%= b.check_box(class: "form-checkbox", disabled: true, id: "modal_clinic_age_group_ids_#{b.object.id}") %> </span>
                            <span class="label"> <%= b.label(for: "") %> </span>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>

            <div class="field-side-by-side">
                <div>
                    <h1 class="title">Date, Time, Location</h1>
                    <%= f.label :clinic_date, class: "block" do %>
                        <span> Clinic Date </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.date_field :clinic_date, class: "form-input", disabled: true, id: "modal_clinic_clinic_date", placeholder: "MM/DD/YYYY" %>

                    <p class="label">Start Time <span class="field-required">*</span></p>
                    <% 
                        start_time = Time.parse("1 AM").to_i
                        end_time = Time.parse("12 PM").to_i
                        values = (start_time..end_time).step(15.minutes)
                    %>
                    <select class="hour form-select" name="clinic[start_hour_minute]" id="modal_clinic_start_hour_minute" disabled="disabled">
                        <%= options_for_select(values.map{ |t| Time.at(t).strftime("%I:%M") }, @clinic.start_time ? @clinic.start_time.strftime('%I:%M') : nil) %>
                    </select>

                    <select class="meridiem form-select" name="clinic[start_meridiem]" id="modal_clinic_start_meridiem" disabled="disabled">
                        <%= options_for_select(['AM', 'PM'], @clinic.start_time ? @clinic.start_time.strftime("%p") : nil) %>
                    </select>

                    <p class="label">End Time <span class="field-required">*</span></p>
                    <select class="hour form-select" name="clinic[end_hour_minute]" id="modal_clinic_end_hour_minute" disabled="disabled">
                        <%= options_for_select(values.map{ |t| Time.at(t).strftime("%I:%M") }, @clinic.end_time ? @clinic.end_time.strftime('%I:%M') : nil) %>
                    </select>

                    <select name="clinic[end_meridiem]" class="meridiem form-select" id="modal_clinic_end_meridiem" disabled="disabled">
                        <%= options_for_select(['AM', 'PM'], @clinic.end_time ? @clinic.end_time.strftime("%p") : nil) %>
                    </select>
                </div>

                <div>
                    <h1 class="title"> &nbsp; </h1>
                    <%= f.label :county, class: "block" do %>
                        <span> County </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.select :county, COUNTIES, {prompt: "Select"}, {class: "form-select w-full", disabled: true, id: "modal_clinic_county"} %>

                    <%= f.label :location, class: "block" %>
                    <%= f.text_field :location, placeholder: "Location", class: "form-input w-full", disabled: true, id: "modal_clinic_location" %>

                    <%= f.label :address, class: "block" %>
                    <%= f.text_field :address, id: "modal_autocomplete", disabled: true, class: "form-input w-full", placeholder: "Address" %>

                    <div class="grid grid-cols-3 gap-4">
                        <div>
                            <%= f.label :zip, "Zip Code", class: "block" %>
                            <%= f.text_field :zip, placeholder: "Zip", id: "modal_postal_code", disabled: true, class: "form-input" %>
                        </div>
                        <div>
                            <%= f.label :city, class: "block" %>
                            <%= f.text_field :city, placeholder: "City", id: "modal_locality", disabled: true, class: "form-input" %>
                        </div>
                        <div>
                            <%= f.label :state, class: "block" %>
                            <%= f.text_field :state, placeholder: "State", id: "modal_administrative_area_level_1", disabled: true, class: "form-input" %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field-fullwidth">
                <h1 class="title"> Appointments Information </h1>
                <p class="label"> Appointments available <span class="field-required">*</span> </p>
                <div class="w-2/4 radio-buttons-container mb-4">
                    <div>
                        <%= f.radio_button :appointments_available, "Yes, required", id: "modal_yes_required", disabled: true, class: "form-radio" %>
                        <%= f.label :appointments_available, value: "yes_required", for: "" do %>
                        <span> Yes, required </span>
                        <% end %>
                    </div>
                    
                    <div>
                        <%= f.radio_button :appointments_available, "Yes, optional", id: "modal_yes_optional", disabled: true, class: "form-radio" %>
                        <%= f.label :appointments_available, value: "yes_required", for: "" do %>
                        <span> Yes, optional </span>
                        <% end %>
                    </div>

                    <div>
                        <%= f.radio_button :appointments_available, "No (Walk-In)", id: "modal_no_walk_in", disabled: true, class: "form-radio" %>
                        <%= f.label :appointments_available, value: "no_walk_in", for: "" do %>
                        <span> No (Walk-In) </span>
                        <% end %>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <%= f.label :appointment_frequency_minutes, "Appointment Frequency: Every", class: "block" %>
                        <%= f.select :appointment_frequency_minutes, [5, 15], {prompt: "Minutes"}, {class: "form-select w-full", disabled: true, id: "modal_clinic_appointment_frequency_minutes"} %>
                    </div>

                    <div>
                        <%= f.label :appointment_slots, "Appointment Slots", class: "block" %>
                        <%= f.select :appointment_slots, (1..50), {prompt: "Select"}, {class: "form-select w-full", disabled: true, id: "modal_clinic_appointment_slots"} %>
                    </div>
                </div>
            </div>

            <div class="field-side-by-side">
                <div>
                    <h1 class="title">Contact Information</h1>
                    <%= f.label :contact_person do %>
                        <span> Contact Person </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.text_field :contact_person, placeholder: "Contact Person", class: "form-input w-full", disabled: true, id: "modal_clinic_contact_person" %>

                    <%= f.label :backup_contact_person do %>
                        <span> Back-Up Contact Person </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.text_field :backup_contact_person, placeholder: "Back-Up Contact Person", class: "form-input w-full", disabled: true, id: "modal_clinic_backup_contact_person" %>
                </div>
                <div>
                    <h1 class="title"> &nbsp; </h1>
                    <%= f.label :contact_phone_number do %>
                        <span> Contact Phone Number </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.text_field :contact_phone_number, placeholder: "Contact Number", class: "form-input w-full", disabled: true, id: "modal_clinic_contact_phone_number" %>

                    <%= f.label :backup_contact_phone_number do %>
                        <span> Back-Up Contact Phone Number </span>
                        <span class="field-required">*</span>
                    <% end %>
                    <%= f.text_field :backup_contact_phone_number, placeholder: "Back-Up Contact Number", class: "form-input w-full", disabled: true, id: "modal_clinic_backup_contact_phone_number" %>
                </div>
            </div>

            <div class="field-fullwidth">
                <h3 class="title"> Additional Clinic Details </h3>
                <div class="grid grid-cols-2 gap-4 items-start">
                    <div class="col-span-2">
                        <%= f.label :incidents_comments, "Incidents Comments", class: "block" %>
                        <%= f.text_area :incidents_comments, placeholder: "Enter Details Here", class: "form-textarea w-1/2", disabled: true, id: "modal_clinic_incidents_comments" %>
                    </div>
                </div>
            </div>

            <div class="field-fullwidth">
                <h3 class="title"> Registration and Staff </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <%= f.label :students_registered, "Number of Patients Registered", class: "block" %>
                        <%= f.number_field :students_registered, placeholder: "Number of Patients Registered", disabled: true, id: "modal_clinic_students_registered", class: "form-input w-full" %>
                    </div>

                    <div>
                        <%= f.label :lead_vaccinator_name, class: "block" do %>
                            <span> Lead Testerâ€™s Name </span>
                            <span class="field-required">*</span>
                        <% end %>
                        <%= f.text_field :lead_vaccinator_name, placeholder: "Lead Tester's Name", class: "form-input w-full", disabled: true, id: "modal_clinic_lead_vaccinator_name" %>
                    </div>
                </div>

                <h1 class="title"> &nbsp; </h1>
                <p class="label w-full"> Clinic Staff </p>
                <div class="fields grid grid-cols-2 gap-3" id="clinicStaffFields">
                    <%= f.fields_for :clinic_personnel do |c| %>
                        <%= render 'clinics/clinic_personnel', f: c %>
                    <% end %>
                </div>
            </div>

            <div class="field-fullwidth">
                <h1 class="title"> Test Kits </h1>
                <div class="flex flex-col">
                    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8" id="testKitsTable">
                        <div class="align-middle inline-block min-w-full overflow-hidden border-b border-gray-200">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> Test Name </th>
                                        <th> Manufacturer </th>
                                        <th> Lot Number </th>
                                        <th> Type </th>
                                        <th> Processing </th>
                                        <th> Expiration Date </th>
                                        <th> # of Test Kits </th>
                                        <th class="tableActions"> Action </th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white" id="testKits">
                                    <% @clinic.test_kits.each do |test_kit| %>
                                        <%= f.fields_for :test_kits, test_kit do |test_kit_fields| %>
                                            <%= render 'clinics/test_kit', f: test_kit_fields %>
                                        <% end %>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
            <span class="flex w-full sm:ml-3 sm:w-auto">
                <button type="button" data-action="click->inventory-new-entry#toggleModal" class="button-primary">
                    Close
                </button>
            </span>
            <span class="mt-3 flex w-full sm:mt-0 sm:w-auto">
                <%= submit_tag "Save Clinic", class: "button-primary" %>
            </span>
        </div>
    </div>
</div>
