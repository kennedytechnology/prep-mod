<div class="flex justify-end">
    <%= link_to_add_test_kit('Add More Test Kits', f, :test_kits, class: 'button-primary') %>
</div>

<div class="flex flex-col">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full overflow-hidden border-b border-gray-200">
        <table class="table">
            <thead>
                <tr>
                    <th> Test Name </th>
                    <th> Test Lot Number </th>
                    <th> # of Starting kits </th>
                    <th> # of Tests Administered </th>
                    <th> # Unusable tests </th>
                    <th> # Tests Returned </th>
                    <th> Action </th>
                </tr>
            </thead>
            <tbody id="testKits">
                <%= f.fields_for :test_kits do |test_kit_fields| %>
                    <%= render 'clinics/activity/test_kit_row', f: test_kit_fields %>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>