<div class="flex flex-col mt-4">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full overflow-hidden border-b border-gray-200">
        <table class="table">
            <thead>
                <tr>
                    <% if school_mode? %>
                        <th> Vaccine Name </th>
                        <th> Vaccine Lot Number </th>
                        <th> # of Starting Kits </th>
                        <th> # of Vaccines Administered </th>
                        <th> # Unusable Vaccines </th>
                        <th> # Vaccines Returned </th>
                    
                        <th> Default </th>
                    <% else %>
                        <th> Test Name </th>
                        <th> Test Lot Number </th>
                        <th> # of Starting Kits </th>
                        <th> # of Tests Administered </th>
                        <th> # Unusable Tests </th>
                        <th> # Tests Returned </th>
                        
                        <th> Default </th>
                    <% end %>
                </tr>
            </thead>
            <tbody id="testKits">
                <%= f.fields_for :test_kits do |test_kit_fields| %>
                    <%= render 'clinics/activity/test_kit_row', {f: test_kit_fields, clinic_form: f} %>
                <% end %>
                <tr class="new_test_kit_row">
                    <td class="font-bold" colspan="2"> Totals: </td>
                    
                    <td> <%= @clinic.test_kits.sum(:test_kits_quantity) %> </td>
                    <td> <%= @clinic.test_kits.sum(:tests_administered) %></td>
                    <td> <%= @clinic.test_kits.sum(:unusable_tests) %></td>
                    <td> <%= @clinic.test_kits.sum(:tests_returned) %></td>
                    
                    <td class="flex w-full">

                    </td>        
                </tr>

            </tbody>
        </table>
        </div>
    </div>
</div>
