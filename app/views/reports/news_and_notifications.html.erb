<h1 class="main-title">News and Notifications</h1>
<p class="mb-12"> News and Notification Contact List </p>

<div class="grid grid-cols-1 md:grid-cols-2 md:gap-4">
    <div class="p-4 border border-gray-50 rounded-lg ">
        <%= column_chart reports_news_signups_by_occupation_path, title: "Numbers of subscriptions by occupation",
            height: "200px",
            discrete: true,
            legend: false,
            library: {
                scales: {
                    xAxes: [{
                        gridLines: {
                            drawOnChartArea: true,
                            color: "#f4f5f7"
                        }
                    }],
                    yAxes: [{
                        gridLines: {
                            drawOnChartArea: true,
                            color: "#f4f5f7"
                        }
                    }]
                }
            },
            dataset: { 
                barPercentage: 0.6,
            }
        %>
    </div>
    <div class="p-4 border border-gray-50 rounded-lg ">
        <%= pie_chart reports_news_signups_with_chronic_health_condition_path, donut: true, title: "Subscribers with/without cronic health condition" %>
    </div>
</div>
