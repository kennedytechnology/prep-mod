<div class="opacity-0 pointer-events-none fixed bottom-0 inset-x-0 px-4 pb-4 sm:inset-0 sm:flex sm:items-center sm:justify-center" id="testingReferralModal">
    <!--
    Background overlay, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
    <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

    <!--
    Modal panel, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      To: "opacity-100 translate-y-0 sm:scale-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100 translate-y-0 sm:scale-100"
      To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
  -->
    <div
        class="relative bg-white rounded-lg px-4 pt-5 pb-4 overflow-hidden shadow-xl transform transition-all sm:p-6 overflow-scroll" style="max-height: 90vh;">
        <div class="hidden sm:block absolute top-0 right-0 pt-4 pr-4">
            <button data-action="click->testing-referral-review-form#toggleModal" type="button"
                class="text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150">
                <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div>
            <div class="w-11/12 mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <h1 class="main-title pb-4 border-b"> Create a COVID-19 Testing Referral </h1>
                <div class="field-side-by-side">
                    <div>
                        <%= f.label :county, class: "block" %>
                        <%= f.select :county, options_for_select(COUNTIES, @patient.county),{prompt: "Select"}, {class: "w-full form-select", disabled: true, id: "modal_patient_county"} %>
                    </div>
                    <div></div>
                </div>

                <div class="field-fullwidth">
                    <div class="grid grid-cols-4 gap-4">
                        <div>
                            <%= f.label :first_name, "Patient's First Name", class: "block" %>
                            <%= f.text_field :first_name, class: "w-full form-input", disabled: true, id: "modal_patient_first_name" %>
                        </div>
                        <div>
                            <%= f.label :middle_initial, class: "block" %>
                            <%= f.text_field :middle_initial, class: "w-full form-input", disabled: true, id: "modal_patient_middle_initial" %>
                        </div>
                        <div>
                            <%= f.label :last_name, "Patient's Last Name", class: "block" %>
                            <%= f.text_field :last_name, class: "w-full form-input", disabled: true, id: "modal_patient_last_name" %>
                        </div>
                        <div>
                            <%= f.label :mothers_maiden_name, "Mother's Maiden Name", class: "block" %>
                            <%= f.text_field :mothers_maiden_name, class: "w-full form-input", disabled: true, id: "modal_mothers_maiden_name" %>
                        </div>
                    </div>
                </div>

                <div class="field-fullwidth">
                    <div class="grid grid-cols-5 gap-4">
                        <div>
                            <%= f.label :address, class: "block" %>
                            <%= f.text_field :address, placeholder: "", class: "w-full form-input", disabled: true, id: "modal_autocomplete" %>
                        </div>
                        <div>
                            <%= f.label :city, class: "block" %>
                            <%= f.text_field :city, class: "w-full form-input", disabled: true, id: "modal_patient_city" %>
                        </div>
                        <div>
                            <%= f.label :state, class: "block" %>
                            <%= f.select :state, options_for_select(US_STATES, @patient.state), {prompt: "Select"}, {class: "w-full form-select", id: "modal_patient_state"} %>
                        </div>
                        <div>
                            <%= f.label :zip_code, "Zip Code", class: "block" %>
                            <%= f.text_field :zip_code, class: "w-full form-input", disabled: true, id: "modal_patient_zip_code" %>
                        </div>
                        <div>
                            <%= f.label :phone_number, "Mobile or Daytime Number", class: "block" %>
                            <%= f.text_field :phone_number, class: "w-full form-input", disabled: true, id: "modal_patient_phone_number" %>
                        </div>
                    </div>
                    <div class="w-4/12">
                        <%= f.label :email, "Email Address", class: "block" %>
                        <%= f.email_field :email, class: "w-full form-input", disabled: true, id: "modal_patient_email" %>
                    </div>
                </div>

                <div class="field-side-by-side">
                    <div class="flex">
                        <div class="w-5/12 mr-2">
                            <%= f.label :date_of_birth, "Date of Birth", class: "block" %>
                            <%= f.date_select :date_of_birth, {order: [:month, :day, :year], start_year: Date.current.year - 99, end_year: Date.current.year, include_blank: true}, class: "form-select", disabled: true, id: "modal_patient_date_of_birth" %>
                        </div>
                        <div class="w-3/12 mr-2">
                            <%= f.label :age, class: "block" %>
                            <%= f.number_field :age, class: "w-full form-input", disabled: true, id: "modal_patient_age" %>
                        </div>
                        <div class="flex-1">
                            <%= f.label :sex, "Gender", class: "block" %>
                            <%= f.select :sex, [["Male", "M"], ["Female", "F"], ["Other", "O"]], {}, {class: "w-full form-select", id: "modal_patient_sex", disabled: true} %>
                        </div>
                    </div>
                    <div>
                        <%# TODO: Check why this is state instead of race %>
                        <%= f.label :state, "Race", class: "block" %>
                        <%= f.select :state, options_for_select(US_RACES, @patient.state), {prompt: "Select"}, {class: "w-full form-select", disabled: true, id: "modal_patient_state"} %>
                    </div>
                </div>

                <div class="field-side-by-side">
                    <div>
                        <h1 class="title">Send Patient Invitation Via</h1>
                        <div class="flex">
                            <div class="mr-6">
                                <%= f.check_box :notify_via_sms, class: "form-checkbox", disabled: true, id: "modal_patient_notify_via_sms" %> 
                                <%= f.label :notify_via_sms, "SMS" %>
                            </div>

                            <div>
                                <%= f.check_box :notify_via_email, class: "form-checkbox", disabled: true, id: "modal_patient_notify_via_email" %> 
                                <%= f.label :notify_via_email, "Email" %>
                            </div>
                        </div>
                    </div>
                    <div></div>
                </div>

            </div>
        </div>
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
            <span class="flex w-full sm:ml-3 sm:w-auto">
                <%= submit_tag "Submit", class: "button-primary" %>
            </span>
            <span class="mt-3 flex w-full sm:mt-0 sm:w-auto">
                <button type="button" data-action="click->testing-referral-review-form#toggleModal" class="button-primary">
                    Close
                </button>
            </span>
        </div>
    </div>
</div>