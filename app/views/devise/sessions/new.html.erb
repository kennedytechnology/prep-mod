<div class="flex flex-col md:flex-row mt-8 md:mt-20 px-2">
  
    <div class="flex w-full md:w-1/2 items-center"><%= image_tag clinic_logo, class: "logo-#{ENV['CLINIC_LOGO']}" %></div>
  
  <!--  <div class="flex w-full md:w-1/2 items-center"><%= image_tag (ENV['SITE_LOGO'] || 'logo-index.png'), class: "object-scale-down h-24 w-full" %></div>
  -->
  
    <div class="w-full md:w-3/12 md:mx-24">
        <h2 class="main-title mt-6 md:mt-0">Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input w-full", placeholder: "Email Address" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input w-full", placeholder: "Password" %>
            <%= f.submit 'Login', class: "button-primary text-xl mt-4 w-full" %>
            <%= link_to 'Forgot Password?', new_user_password_path, class: "button-primary text-xl mt-4 w-full" %>
        <% end %>
    </div>
</div>