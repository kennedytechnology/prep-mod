<div class="flex mb-4 mt-4">
  <div class="w-1/2">
    <%= f.date_field :consent_date, as: :date, value: Date.today, disabled: true, class: "px-4 pb-2 border-b bg-transparent mb-4" %>
    <p class="font-semibold"> Date </p>
  </div>
</div>

