<div class="flex mb-4">
  <div class="w-1/2 mr-4">
    <div class="form-question">County</div>
    <%= f.select :county, options_for_select(COUNTIES),{}, class: "w-full form-select block rounded m-1" %>
  </div>
  <div class="w-1/2"></div>
</div>

<div class="flex mb-4">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">First Name</div>
      <%= f.text_field :first_name, class: "w-full form-input block rounded" %>
    </label>
  </div>
  <div class="w-1/2 flex">
     <label class="w-3/12">
      <div class="form-question">Middle Initial</div>
      <%= f.text_field :middle_initial, class: "w-11/12 form-input block rounded" %>
    </label>
    <label class="w-9/12">
      <div class="form-question">Last Name</div>
      <%= f.text_field :last_name, class: "w-full form-input block rounded" %>
    </label>
  </div>
</div>

<div class="flex mb-4">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">Mother's Maiden Name</div>
      <%= f.text_field :mothers_maiden_name, disabled: true, class: "w-full form-input block rounded bg-gray-100 cursor-not-allowed" %>
    </label>
  </div>
  <div class="w-1/2">
    <label>
      <div class="form-question">Address</div>
        <%= f.text_field :address, id: "autocomplete", placeholder: "", class: "w-full form-input block rounded" %>
       <%= render partial: "public/clinics/google_maps_script" %>
    </label>
  </div>
</div>

<div class="flex mb-4">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">State</div>
      <%= f.select :state, options_for_select(US_STATES), {}, class: "w-full form-input block rounded" %>
    </label>
  </div>
  <div class="w-1/2 flex">
    <label class="w-1/2">
      <div class="form-question">City</div>
      <%= f.text_field :city, class: "w-11/12 form-input block rounded" %>
    </label>
    <label class="w-1/2">
      <div class="form-question">Zip Code</div>
      <%= f.text_field :zip_code, class: "w-full form-input block rounded" %>
    </label>
  </div>
</div>

<div class="flex mb-4">
  <div class="w-1/2 flex">
    <label class="w-5/12 mr-1">
      <div class="form-question">Date Of Birth</div>
      <%= f.date_field :date_of_birth, class: "form-select transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
    </label>
    <label class="w-4/12 mr-1">
      <div class="form-question">Age</div>
      <%= f.text_field :age, disabled: true, class: "w-4/12 form-input block rounded bg-gray-100 cursor-not-allowed" %>
    </label>
    <label class="w-3/12 mr-4">
      <div class="form-question">Gender</div>
      <%= f.select :sex, [["Male", "M"], ["Female", "F"], ["Other", "O"]], {prompt: "Choose Gender"}, {disabled: true, class: "w-full form-input block rounded bg-gray-100 cursor-not-allowed"} %>
    </label>
  </div>
  <div class="w-1/2">
    <label>
      <div class="form-question">Race</div>
      <%= f.select :state, options_for_select(US_RACES), {prompt: "Select"}, {class: "w-full form-input block rounded"} %>
    </label>
  </div>
</div>

<div class="flex mb-4">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">Number of Adults in Your Household</div>
      <%= select_tag :number_of_adults, options_for_select((1..10).to_a), class: "w-full form-select block rounded" %>
    </label>
  </div>
  <div class="w-1/2">
    <label>
      <div class="form-question">Number of Children in Your Household</div>
      <%= select_tag :number_of_children, options_for_select((1..10).to_a), class: "w-full form-select block rounded" %>
    </label>
  </div>
</div>


<div class="flex mb-5">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">Email Address</div>
      <%= f.text_field :email, class: "w-full form-input block rounded", required: true %>
    </label>
  </div>
  <div class="w-1/2">
    <label>
      <div class="form-question">Mobile or Daytime Number</div>
      <%= f.text_field :phone_number, class: "w-full form-input block rounded" %>
    </label>
  </div>
</div>

<div class="flex mb-5">
  <div class="w-1/2 mr-4">
    <label>
      <div class="form-question">Occupation</div>
      <%= f.select :occupation, PATIENT_OCCUPATIONS, {prompt: "Select"}, {class: "w-full form-select block rounded"} %>
    </label>
  </div>
  <div class="w-1/2">
  </div>
</div>

