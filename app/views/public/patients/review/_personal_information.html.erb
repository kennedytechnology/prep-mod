<h2 class="text-xl font-bold mb-4"> <%= t 'views.public.patients.review.personal_information.title' %> </h2>
<div class="field-side-by-side">
    <div>
        <p> <%= t 'views.public.patients.review.personal_information.county' %> </p>
        <p class="font-bold"> <%= @patient.county %> </p>
    </div>
    <div> </div>
</div>

<div class="field-side-by-side">
    <div class="md:flex lg:flex">
        <div class="w-full md:w-9/12 md:mr-2 lg:w-8/12 lg:mr-2">
            <p>
                <% if school_mode? %>
                    <%= t('activerecord.models.patient.student_first_name') %>
                <% else %>
                    <%= t 'static_pages.public.patients.consent_form.personal_information.first_name' %>
                <% end %>
            </p>
            <p class="font-bold"> <%= @patient.first_name %> </p>
        </div>
        <div class="flex-1">
            <p>
                <% if school_mode? %>
                    <%= t('activerecord.models.patient.student_middle_initial') %>
                <% else %>
                    <%= t('static_pages.public.patients.consent_form.personal_information.middle_initial') %>
                <% end %>
            </p>
            <p class="font-bold"> <%= @patient.middle_initial %> </p>
        </div>
    </div>
    <div class="md:flex lg:flex">
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p>
                <% if school_mode? %>
                    <%= t('activerecord.models.patient.student_last_name') %>
                <% else %>
                    <%= t 'static_pages.public.patients.consent_form.personal_information.last_name' %>
                <% end %>
            </p>
            <p class="font-bold"> <%= @patient.last_name %> </p>
        </div>
        <div class="flex-1">
            <p> <%= t('static_pages.public.patients.consent_form.personal_information.mothers_maiden_name') %></p>
            <p class="font-bold"> <%= @patient.mothers_maiden_name %>  </p>
        </div>
    </div>
</div>

<div class="field-side-by-side">
    <div class="md:flex lg:flex">
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.date_of_birth' %> </p>
            <p class="font-bold"> <%= @patient.date_of_birth%> </p>
        </div>
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p> <%= t('static_pages.public.patients.consent_form.personal_information.age') %> </p>
            <p class="font-bold"> <%= @patient.age %> </p>
        </div>
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.gender' %> </p>
            <p class="font-bold"> <%= @patient.sex %> </p>
        </div>
    </div>
    <% unless school_mode? %>
        <div class="flex">
            <div class="flex-1 flex mr-2">
                <div class="w-1/2 mr-1">
                    <p> Email Address: </p>
                    <p class="font-bold"> <%= @patient.email %> </p>
                </div>
            </div>
        </div>
    <% end %>
</div>

<% if school_mode? %>
    <div class="field-side-by-side">
        <div class="flex">
            <div class="flex-1 mr-2">
                <p> <%= t('activerecord.models.patient.grade') %> </p>
                <p class="font-bold"> <%= @patient.grade  %> </p>
            </div>

            <div class="flex-1 mr-2">
                <p> <%= t('activerecord.models.patient.homeroom_teacher') %> </p>
                <p class="font-bold">  <%= @patient.homeroom_teacher %> </p>
            </div>
        </div>
    </div>

    <div class="flex">
        <div class="w-1/2 mr-3">
            <p> <%= t 'views.public.patients.review.personal_information.guardian_first_name' %> </p>
            <p class="font-bold"> <%= @patient.guardian_first_name %> </p>
        </div>

        <div class="w-1/2 mr-1">
            <p> <%= t 'views.public.patients.review.personal_information.guardian_last_name' %> </p>
            <p class="font-bold"> <%= @patient.guardian_last_name %> </p>
        </div>

        <div class="w-1/2 mr-3 ml-3">
            <p> <%= t 'views.public.patients.review.personal_information.guardian_email' %> </p>
            <p class="font-bold"> <%= @patient.guardian_email %> </p>
        </div>
    </div>
    <div class="field-side-by-side"></div>
<% end %>

<div class="field-side-by-side">
    <div class="flex">
        <div class="flex-1 mr-2">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.address' %> </p>
            <p class="font-bold"> <%= @patient.address %> </p>
        </div>
        <div class="flex-1">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.city' %> </p>
            <p class="font-bold"> <%= @patient.city %> </p>
        </div>
    </div>
    <div class="flex">
        <div class="flex-1 mr-2">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.state' %> </p>
            <p class="font-bold"> <%= @patient.state %></p>
        </div>
        <div class="flex-1">
            <p> <%= t 'static_pages.public.patients.consent_form.personal_information.zip_code' %> </p>
            <p class="font-bold"> <%= @patient.zip_code %> </p>
        </div>
    </div>
</div>

<div class="field-side-by-side">
    <div>
        <p> <%= t 'static_pages.public.patients.consent_form.personal_information.phone_number' %> </p>
        <p class="font-bold"> <%= @patient.phone_number %> </p>
    </div>
    <div> </div>
</div>