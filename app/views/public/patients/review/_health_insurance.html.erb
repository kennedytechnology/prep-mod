<h2 class="text-xl font-bold mb-4"> <%= t 'views.public.patients.review.health_insurance.title' %> </h2>
<div class="field-side-by-side">
    <div>
        <p> <%= t 'views.public.patients.review.health_insurance.type' %> </p>
        <p class="font-bold"> <%= @patient.insurance_type %> </p>
    </div>
    <div>
        <p> <%= t 'views.public.patients.review.health_insurance.company_name' %> </p>
        <p class="font-bold"> <%= @patient.insurance_company_name %> </p>
    </div>
    <div> </div>
</div>

<div class="field-side-by-side">
    <div class="md:flex lg:flex">
        <div class="w-full md:w-9/12 md:mr-2 lg:w-8/12 lg:mr-2">
            <p> <%= t 'views.public.patients.review.health_insurance.policy_number' %> </p>
            <p class="font-bold"> <%= @patient.member_id_for_insurance %> </p>
        </div>
        <div class="flex-1">
            <p> <%= t 'views.public.patients.review.health_insurance.policy_number' %> </p>
            <p class="font-bold"> <%= @patient.group_number_for_insurance %> </p>
        </div>
    </div>
    <div class="md:flex lg:flex">
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p> <%= t 'views.public.patients.review.health_insurance.card_number' %> </p>
            <p class="font-bold"> <%= @patient.card_number_for_insurance %> </p>
        </div>
        <div class="flex-1">

        </div>
    </div>
</div>

<div class="field-side-by-side">
    <div class="md:flex lg:flex">
        <div class="w-full md:w-9/12 md:mr-2 lg:w-8/12 lg:mr-2">
            <p> <%= t 'views.public.patients.review.health_insurance.insured_first_name' %> </p>
            <p class="font-bold"> <%= @patient.insured_first_name %>  </p>
        </div>
        <div class="flex-1 mr-4">
            <p> <%= t 'views.public.patients.review.health_insurance.insured_last_name' %> </p>
            <p class="font-bold"> <%= @patient.insured_last_name %> </p>
        </div>
    </div>
    <div class="md:flex lg:flex">
        <div class="flex-1 md:mr-2 lg:mr-2">
            <p> <%= t 'views.public.patients.review.health_insurance.insured_dob' %> </p>
            <p class="font-bold"> <%= @patient.insured_date_of_birth.try(:to_s, :long_ordinal) %> </p>
        </div>
    </div>
</div>

<div class="field-side-by-side">
    <div class="flex">
        <div class="flex-1 flex mr-2">
            <div class="w-1/2 mr-1">
                <p> <%= t 'views.public.patients.review.health_insurance.relationship_to_patient' %> </p>
                <p class="font-bold"> <%= @patient.relation_to_patient_for_consent %> </p>
            </div>
        </div>
    </div>
</div>
<div class="field-side-by-side">
    <div>
        <p> <%= t 'views.public.patients.review.health_insurance.front_card' %> </p>
        <%= image_tag @patient.insurance_card_front if @patient.insurance_card_front.attached? %>
    </div>
    <div>
        <p> <%= t 'views.public.patients.review.health_insurance.back_card' %> </p>
        <%= image_tag @patient.insurance_card_back if @patient.insurance_card_back.attached? %>
    </div>
</div>