<div class="container overflow-hidden">

  <%= form_for( @patient , url: "/client/registration" ,remote: false, class: "bg-white p-8 md:-12 lg:p-16 rounded-lg shadow") do |f| %>
    <h1 class="text-2xl leading-6 font-medium text-blue-600 font-bold mb-2">Register for COVID-19 Testing: <%= @clinic.name %></h1>

    <% %w(personal_information health_insurance health_questions consent_for_services appointment).each do |step| %>
      &mdash;
      <span class="<%= step == @step ? "text-red-700 font-bold" : "text-gray-400" %>">
      <%= step.humanize.titleize %></span>
    <% end %> <a href="/clear_session">&mdash;</a> <br/><br/>

    <%= render '/public/patients/edit/' + @step, f: f %>
    <%# <a href="/clear_session">Log Out</a> %>
    <div class="button-container">
      <%= submit_tag "Save and Continue →", class: "button-primary mt-10" %>
      <% if @step == "consent_for_services" %>
        <div class="w-1/3">
            <%= submit_tag "Save and Add Family Member →", class: "button-primary-fullwidth" %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>