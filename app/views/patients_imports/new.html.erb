<h2 class="main-title"> Import Patients </h2>

<%# link_to "Download Headers in Excel", new_patients_import_path(format: :xlsx), class: "button-action mb-3" %>

<p class="font-semibold mb-6"> 
    Note: Only import spreadsheets with appropriates headers.
</p>

<h3>Select file:</h3>
<%= form_with(model: @patients_import, local: true) do |f| %>
  <% if @patients_import.errors.any? %>
    <%= pluralize(@patients_import.errors.count, "error") %> prevented us from
    importing your spreadsheet. Please update your spreadsheet and try again.
    <ul>
      <% @patients_import.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.file_field :file, class: "form-input", required: true %>
  <%= f.submit "Upload", class: "button-action" %>
<% end %>